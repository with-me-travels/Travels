<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.BoxContentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/boxcontent_toobar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/boxcontent_return_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:src="@mipmap/back_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_25"
                android:gravity="center"
                android:text="消息详情"
                android:textColor="@color/c_373737"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/c_c8c8c8" />


    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_65"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/c_eaeaea"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_box_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="2018/07/25"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="请问日本的西瓜卡怎么办理？"
            android:textColor="@color/c_636363"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_78"
            android:layout_alignParentRight="true"
            android:background="@color/c_FCEEE3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_box_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6"
                android:text="2018/07/25"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_10"
                android:text="在个地铁口都可以买到,"
                android:textColor="@color/c_636363"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="有一个西瓜卡的自动售货机。"
                android:textColor="@color/c_636363"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>