<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="450dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/c_fa6a13"
        app:cardCornerRadius="@dimen/dp_25"
        app:cardElevation="@dimen/dp_10">

        <ImageView
            android:id="@+id/home_page_item_cardURL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/colorAccent" />

        <ImageView
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_116"
            android:scaleType="fitXY"
            android:src="@color/c_99ffffff" />

        <TextView
            android:id="@+id/home_page_item_title"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_37"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:text="银座"
            android:textColor="#FF373737"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/home_page_item_intro"
            android:layout_width="@dimen/dp_132"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_66"
            android:gravity="center"
            android:text="疯狂购物买买买"
            android:textColor="#FF636363"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/home_page_item_city"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:text="东京"
            android:textColor="#FF999999"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_29"
            android:layout_marginStart="@dimen/dp_246"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@drawable/home_page_item_price" />

        <TextView
            android:id="@+id/home_page_item_price"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_21"
            android:layout_marginStart="@dimen/dp_253"
            android:layout_marginTop="@dimen/dp_29"
            android:text="￥28.00"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/home_page_item_priceInCents"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_17"
            android:text="530人购买"
            android:textColor="#FF636363"
            android:layout_marginStart="@dimen/dp_254"
            android:layout_marginTop="@dimen/dp_55"
            android:textSize="@dimen/sp_12" />

    </android.support.v7.widget.CardView>
</LinearLayout>