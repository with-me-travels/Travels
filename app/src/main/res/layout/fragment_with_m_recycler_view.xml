<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardMaxElevation="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_120"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/banmi_touxiang"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/banmi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="杨晨"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_22" />

                <ImageView
                    android:id="@+id/banmi_follow"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/follow_unselected" />

            </RelativeLayout>

            <TextView
                android:id="@+id/banmi_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_3"
                android:text="248人关注"
                android:textColor="#999999" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_12"
                    android:src="@mipmap/banmi_location"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/banmi_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="东京"
                    android:textColor="#999999" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/book" />

                <TextView
                    android:id="@+id/banmi_zuozhe"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_width="@dimen/dp_132"
                    android:layout_height="@dimen/dp_15"
                    android:text="日本国家旅游局专栏作者" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>