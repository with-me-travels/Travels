<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bg_round"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@mipmap/round"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8" />

    <ImageView
        android:id="@+id/bg_line"
        android:layout_below="@id/bg_round"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@mipmap/line"
        android:layout_width="3dp"
        android:layout_height="@dimen/dp_375" />

    <TextView
        android:id="@+id/date"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/bg_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/upload"
        android:layout_below="@id/date"
        android:text="发表一条动态"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_17"
        android:layout_toRightOf="@id/bg_line"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/bg_line"
        android:layout_below="@id/upload"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardUseCompatPadding="true"
        android:padding="@dimen/dp_5"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_315">

            <TextView
                android:id="@+id/title"
                android:text="这里是标题"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/content"
                android:layout_below="@id/title"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img"
                android:scaleType="fitXY"
                android:layout_below="@id/content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_width="@dimen/dp_300"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/dp_131" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>