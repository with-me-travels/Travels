<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardMaxElevation="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_410">

        <ImageView
            android:id="@+id/dynamic_img"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/dynamic_rl"
            android:background="@color/colorWhite_Dynamic"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_116">

            <TextView
                android:id="@+id/dynamic_city"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dynamic_title"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dynamic_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_69"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/dynamic_price"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_246"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:background="@drawable/dynamic_btn_shape"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_29" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>