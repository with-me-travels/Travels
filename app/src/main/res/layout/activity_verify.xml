<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bake"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_43"
        android:src="@mipmap/back_white" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_bake"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="重新发送"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bake"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_44"
        android:text="@string/login_verify"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_28" />

    <com.wjx.travelwithm_master.widget.IdentifyingCodeView
        android:id="@+id/identifyingCodeVie"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_56"
        android:layout_below="@id/tv_verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_83"
        app:icv_et_divider_drawable="@drawable/divider_icv"
        app:icv_et_height="@dimen/dp_56"
        app:icv_et_number="4"
        app:icv_et_text_color="@color/c_636363"
        app:icv_et_text_size="@dimen/sp_32"
        app:icv_et_width="@dimen/dp_44" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/identifyingCodeVie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_33"
        android:textColor="@color/c_ff9d53"
        android:text="请稍后..."
        android:textSize="@dimen/sp_14"/>

</RelativeLayout>