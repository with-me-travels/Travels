                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_150"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text=">"
                            android:textColor="@color/c_a9a9a9"
                            android:textSize="@dimen/sp_20" />

                    </LinearLayout>

                    <View
