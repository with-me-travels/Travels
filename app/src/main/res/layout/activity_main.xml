                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_270"
                    android:layout_marginTop="@dimen/dp_132"
                    android:text=">"
                    android:textColor="@color/textColor" />

                <TextView
                    android:layout_width="wrap_content"
