<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wjx.travelwithm_master">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".base.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon_me_kaquan_banmi1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_me_kaquan_banmi1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.activity.SettingNameActivity"
            android:theme="@style/NoAppTheme"></activity>
        <activity
            android:name=".ui.activity.SettingInfoActivity"
            android:theme="@style/NoAppTheme"></activity>
        <activity
            android:name=".ui.activity.PersonalInfomationActivity"
            android:theme="@style/NoAppTheme" /> <!-- 启动页 -->
        <activity android:name=".ui.activity.BoxContentActivity"
            android:theme="@style/NoAppTheme"
            ></activity>
        <!-- 消息页面 -->
        <activity
            android:name=".ui.activity.MailboxActivity"
            android:theme="@style/NoAppTheme" /> <!-- 启动页 -->
        <activity
            android:name=".ui.activity.BeginActivity"
            android:theme="@style/BeginStyle" /> <!-- page页 -->
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/NoAppTheme" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/FullScreen" /> <!-- 主页 -->
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/NoAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>